<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CategoriesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/ivImage2"
            android:scaleType="centerCrop"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="@string/recipe_name"
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/nom_plat"
            />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="@string/description"
            android:textSize="22sp"
            android:id="@+id/desc_plat"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:text="@string/price"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="27sp"
            android:textStyle=""
            android:gravity="end"
            android:id="@+id/prix"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/red"
                android:onClick="quantityDown"
                android:text="@string/moins"
                android:textColor="#ffffff"
                android:textSize="22sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantit"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/quantityText">

            </TextView>
            <Button
                android:id="@+id/btnUp"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/red"
                android:text="@string/plus"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:layout_margin="20dp"
                android:onClick="quantityUp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/cmd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="btnOrder"
            android:text="@string/commande"
            app:backgroundTint="@color/red">

        </Button>



    </LinearLayout>

</ScrollView>